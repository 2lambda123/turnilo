{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "jsx": "react",
    "types" : ["node", "express", "webpack-env"],
    "experimentalDecorators": true,
    "lib": [ "dom", "es6", "es5" ]
  },
  "include": [
    "src/client/**/*.ts",
    "src/client/**/*.tsx",
    "typings/**/*.d.ts"
  ],
  "compileOnSave": false
}